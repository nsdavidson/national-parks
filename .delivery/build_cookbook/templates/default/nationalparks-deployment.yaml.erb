apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nationalparks-<%= @environment %>
spec:
  replicas: 3
  template:
    metadata:
      labels:
        app: nationalparks
        env: <%= @environment %>
    spec:
      containers:
      - name: nationalparks
        image: ndavidson/national-parks:<%= @container_tag %>
        ports:
        - containerPort: 8080
        args: ["--peer", "<%= @mongo_ip %>", "--bind", "database:mongodb.default"]